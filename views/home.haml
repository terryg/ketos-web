%div{:id=>"wrap"}
  %div{:id=>"container"}
    %div{:class=>"page-header-nav"}
      <a href="/logout">logout</a>

    %div{:class=>"page-header"}
      %h1{:class=>"home-heading"}
        KETOS APP (<a href="/">refresh</a>)

    %div{:class=>"page"}
      %div{:class=>"home-dashboard"}

        %div{:class=>"row"}
          %div{:class=>"col-lg-2"}
          - if !session['twitter']
            %a{:href=>"/auth/twitter"}
              Add Twitter
       
          - if !session['facebook']
            %br
            %a{:href=>"/auth/facebook"}
              Add Facebook

          - if !session['tumblr']
            %br
            %a{:href=>"/auth/tumblr"}
              Add Tumblr

          %div{:class=>"col-lg-10"}
            %table{:class=>"home-items"}
              %thead
                %tr
                  %th
                    From
                  %th
                    Msg
                  %th
              %tbody
                - @items.each do |i|
                  %tr
                    %td
                      = i.name_html
                    %td
                      = i.text_html
                    %td
                      = i.permalink

  = haml :footer
