%div{:id=>"wrap"}
  %div{:id=>"container"}
    %div{:class=>"page-header-nav"}
      <a href="/logout">logout</a>

    %div{:class=>"page-header"}
      %h1{:class=>"home-heading"}
        KETOS APP (<a href="/">refresh</a>)

    %div{:class=>"page"}
      %div{:class=>"home-dashboard"}

        %div{:class=>"row"}
          %div{:class=>"col-lg-12"}
          - if !session['twitter']
            %a{:href=>"/auth/twitter"}
              Add Twitter
       
          - if !session['facebook']
            %br
            %a{:href=>"/auth/facebook"}
              Add Facebook

          - if !session['tumblr']
            %br
            %a{:href=>"/auth/tumblr"}
              Add Tumblr

        %div{:class=>"row"}
          %div{:class=>"col-lg-12"}
            %form{:action => "", :method => "post"}
              %fieldset
                %label{:for => "body"} Update:
                %textarea{:name => "body"}

                %input{:type => "submit", :value => "Send", :class => "button"}

        %div{:class=>"row"}
          %div{:class=>"col-lg-12"}
            %table{:class=>"home-items"}
              %thead
                %tr
                  %th
                    From
                  %th
                    Msg
                  %th
              %tbody
                - @items.each do |i|
                  %tr
                    %td
                      = i.name_html
                    %td
                      = i.text_html
                      - if i.img_url
                        <br />
                        = i.img_html
                    %td
                      = i.permalink



  = haml :footer
