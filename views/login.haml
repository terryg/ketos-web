%div{:id=>"wrap"}
  %div{:id=>"container"}
  
    %h1{:class=>"register-heading"}
      KETOS APP
    %form{:class=>"form-register",:method=>"POST",:action=>"/login"}
      %h2{:class=>"form-register-heading"}
        All your social networks are belong to us.
      %input{:name=>"email",:type=>"text", :class=>"form-control", :placeholder=>"Email address"}
      %input{:name=>"password",:type=>"password", :class=>"form-control", :placeholder=>"Password"}
      %label{:class=>"checkbox"}
        %input{:type=>"checkbox",:name=>"remember"}
        Remember me
      - if @error_message
        %span{:class=>"error-message"}
          = @error_message


      %button{:class=>"btn btn-large btn-primary btn-block", :type=>"submit"}
        Log in
      %a{:href=>"/register"}
        <strong>Sign up</strong> for a new account.

  = haml :footer
